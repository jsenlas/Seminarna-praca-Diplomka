@article{Gabai:16,
author = {Haniel Gabai and Avishay Eyal},
journal = {Opt. Lett.},
keywords = {Fiber measurements; Fiber optics sensors; Multiplexing; Densitometers, reflectometers; Interference; Optical fibers; Phase modulation; Phase noise; Phase shift; Variable optical attenuators},
number = {24},
pages = {5648--5651},
publisher = {Optica Publishing Group},
title = {On the sensitivity of distributed acoustic sensing},
volume = {41},
month = {Dec},
year = {2016},
url = {https://opg.optica.org/ol/abstract.cfm?URI=ol-41-24-5648},
doi = {10.1364/OL.41.005648},
abstract = {In distributed acoustic sensing (DAS) an optical fiber is transformed into an array of thousands of \&\#x201C;virtual microphones.\&\#x201D; Most current DAS methodologies are based on coherent interference of Rayleigh backscattered light and thus are prone to signal fading. Hence, the sensitivities of the \&\#x201C;microphones\&\#x201D; fluctuate randomly along the fiber. Therefore, specifying the sensitivity of DAS without considering its random nature is incomplete and of limited value. In this Letter, the statistical properties of DAS SNR and DAS sensitivity are studied in detail for the first time, to the best of our knowledge. It is shown that the mean dynamic DAS SNR is proportional to the SNR obtained in a single measurement of the fiber\&\#x2019;s \&\#x201C;static\&\#x201D; backscatter profile and, in turn, to the energy of the interrogation pulse. Finally, the minimum input signal, which produces a specified mean DAS SNR, is proposed as a new figure of merit for the characterization of system performances and for comparison between the sensitivities of different DAS modalities.},
}


